#!/usr/bin/env node

var pkg = require("../package.json");
var Complete = new require("../lib/complete");
var commander = require("commander");

commander
	.version(pkg.version)
	.usage("<filepath> <options>")
	.option("-f, --force", "出力ファイルが既に存在する場合、上書きする")
	.option("-i, --ignore", "出力ファイルが既に存在する場合、上書きしない")
	.option("--ffmpeg <path>", "ffmpegのバイナリのフルパスを直接指定する場合に使うオプション")
	.option("-ab <bitrate>", "出力する音声のビットレート")
	.option("-ac <channels>", "出力する音声のチャンネル数")
	.option("-ar <rate>", "出力する音声のサンプリングレート")
	.parse(process.argv);

var filepath = commander.args[0];
var options = {
	bitrate: commander.bitrate ? Number(commander.bitrate) : null,
	channels: commander.channels ? Number(commander.channels) : null,
	rate: commander.rate ? Number(commander.rate) : null
};

var complete = new Complete(options, commander.ffmpeg);
if (commander.force && commander.ignore) {
	console.log("You can not provide force and ignore at the same time");
	process.exit(1);
} else {
	if (commander.force)
		complete.overwrite = "force";
	if (commander.ignore)
		complete.overwrite = "ignore";
	var loop = function(index) {
		var filepath = commander.args[index];
		complete.auto(filepath, function(err) {
			if (err) {
				console.log(err);
				process.exit(1);
			}
			if (index < commander.args.length - 1) {
				setTimeout(function(){loop(index + 1)}, 0);
			} else {
				console.log("done!");
			}
		});
	};
	loop(0);
}
